# Environment Configuration - Copy and rename this to .env

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# S3 Configuration (if using S3 for storage)
S3_BUCKET_NAME=your-qr-codes-bucket
S3_REGION=us-east-1

# Application Configuration
CLEANUP_DAYS=1
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=false

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://yourdomain.com

# API Configuration
API_PREFIX=/api
API_VERSION=1.0.0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# QR Code Configuration
QR_CLEANUP_ON_GENERATE=true
QR_CODE_SIZE=10
QR_CODE_BORDER=4
QR_CODE_ERROR_CORRECTION=H

# Database (if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/qrcode_db

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0

# Authentication
API_KEY=your_api_key_here
JWT_SECRET=your_jwt_secret_here

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/123456

# Email notifications (for errors)
EMAIL_FROM=alerts@yourdomain.com
EMAIL_TO=admin@yourdomain.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600
